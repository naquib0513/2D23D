{
  "$schema": "https://2d23d.org/schemas/config-v1.json",
  "template_name": "malaysia_pwd_2024",
  "description": "Malaysian Public Works Department (PWD) standard layer conventions (2024)",
  "region": "Malaysia",
  "standard": "PWD JKR",
  "version": "1.0.0",

  "layer_mappings": {
    "grid": {
      "patterns": ["GRID", "AXIS", "A-GRID", "COL-GRID", "STRUCTURAL-GRID"],
      "element_type": "grid_line",
      "description": "Structural grid lines"
    },
    "wall": {
      "patterns": ["WALL", "A-WALL", "ARCH-WALL", "WALL-*"],
      "element_type": "wall",
      "description": "Architectural walls"
    },
    "structural_wall": {
      "patterns": ["S-WALL", "STR-WALL", "SHEAR-WALL"],
      "element_type": "wall",
      "structural": true,
      "description": "Structural walls"
    },
    "column": {
      "patterns": ["COLUMN", "COL", "S-COL", "A-COL"],
      "element_type": "column",
      "description": "Structural columns"
    },
    "door": {
      "patterns": ["DOOR", "A-DOOR", "DOOR-*"],
      "element_type": "door",
      "description": "Doors"
    },
    "window": {
      "patterns": ["WINDOW", "WIN", "A-WIND", "WINDOW-*"],
      "element_type": "window",
      "description": "Windows"
    },
    "slab": {
      "patterns": ["SLAB", "FLOOR", "S-SLAB"],
      "element_type": "slab",
      "description": "Floor slabs"
    }
  },

  "generation_settings": {
    "default_wall_height": 3000,
    "default_wall_thickness": 150,
    "default_column_size": 300,
    "default_slab_thickness": 150,
    "units": "mm"
  },

  "grid_detection": {
    "min_line_length": 1000,
    "angle_tolerance": 0.087,
    "spacing_tolerance": 0.15,
    "min_grid_lines": 2
  },

  "confidence_thresholds": {
    "grid_detection": 0.7,
    "wall_classification": 0.6,
    "element_placement": 0.5
  },

  "compliance_rules": {
    "reference": "UBBL 1984 (Uniform Building By-Laws)",
    "fire_egress": {
      "max_travel_distance_m": 30,
      "min_exit_width_mm": 900
    },
    "fire_sprinklers": {
      "required_when": "area > 232 sqm",
      "coverage_sqm": 9.0,
      "grid_spacing_m": 3.0
    }
  }
}
